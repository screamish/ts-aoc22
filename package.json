{
  "name": "typescript-cli-starter",
  "private": true,
  "version": "1.0.0",
  "description": "A simple and zero-opinion typescript starter template for building cross-platform command line applications.",
  "author": "Khalid Zoabi <kzoabi@outlook.com>",
  "keywords": [
    "typescript",
    "cli",
    "starter"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "clean": "rimraf ./dist/ ./exec/",
    "build": "npm run clean && tsc",
    "test": "npm run build && ava --verbose",
    "bundle": "npm run build && pkg . --out-dir ./exec/"
  },
  "devDependencies": {
    "@types/node": "^18.11.10",
    "ava": "^5.1.0",
    "pkg": "^5.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@mobily/ts-belt": "^3.13.1",
    "commander": "^9.4.1",
    "immutable": "^4.1.0",
    "typescript-collections": "^1.3.3"
  }
}
